<!DOCTYPE html>
<html>
<head>
  <title>Estudio</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
	<ul class="nav nav-tabs">
		<li>
			<%= link_to "Inicio", root_path %>
		</li>
		<% if usuario_signed_in? %>
			<%= link_to "Editar Perfil", edit_usuario_registration_path(current_usuario)%>
			<%= link_to "Cerrar Perfil", destroy_usuario_session_path, method: :delete %>
		<% else %>
			<li>
				<%=  link_to "Iniciar Sesion", new_usuario_sessions_path %>
			</li>
			<li>
				<%=  link_to "Registrarse", new_usuario_registration_path %>
			</li>
		<%end %>
	</ul>
</header>
<p class="notice" style="<%= "display:none;" if notice.nil?%>"><%= notice %></p>
<p class="alert" style="<%= "display:none;" if alert.nil?%>"><%= alert %></p>

<%= yield %>

</body>
</html>
